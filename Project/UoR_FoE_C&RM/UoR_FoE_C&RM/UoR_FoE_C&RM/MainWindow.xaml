<Window x:Class="UoR_FoE_C_RM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="UoR-FoE Complaints and Requests Management System" 
        Height="500" Width="900"
        ResizeMode="NoResize"
        SizeToContent="Manual"
        WindowStartupLocation="CenterScreen"
        Background="LightGray">


    <Window.Resources>
        <!-- Define shadow effect -->
        <DropShadowEffect x:Key="ShadowEffect" BlurRadius="10" ShadowDepth="3" Opacity="0.3"/>

        <!-- Button Style with Rounded Corners -->
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="10" 
                                Padding="10"
                                Effect="{StaticResource ShadowEffect}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#1E90FF"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#0078D7"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#005BAA"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Background Gradient -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#1E90FF" Offset="0"/>
                <GradientStop Color="#87CEFA" Offset="0.5"/>
                <GradientStop Color="#FFFFFF" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Login Panel with Glass Effect -->
        <Border Width="420" Padding="30" CornerRadius="15" Background="#AAFFFFFF" 
                HorizontalAlignment="Center" VerticalAlignment="Center"
                Effect="{StaticResource ShadowEffect}">

            <Grid>
                <!-- Background Blur Effect -->
                <Border Background="#FFFFFF" Opacity="0.1" CornerRadius="15"/>
                <StackPanel>
                    <!-- Title -->
                    <TextBlock Text="Welcome!" FontSize="26" FontWeight="Bold" Foreground="#222"
                               HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <TextBlock Text="University of Ruhuna" FontSize="18" FontWeight="Bold" Foreground="#444"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Faculty of Engineering" FontSize="16" FontWeight="Bold" Foreground="#555"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Complaints and Requests Management System" FontSize="14" Foreground="#666"
                               HorizontalAlignment="Center" Margin="0,10,0,20"/>

                    <!-- Username Input -->
                    <TextBlock Text="Username" FontSize="14" Foreground="#333" Margin="5,0"/>
                    <Border Background="#F5F5F5" CornerRadius="10" Padding="5">
                        <TextBox x:Name="UsernameTextBox" Height="35" BorderThickness="0" FontSize="14"/>
                    </Border>

                    <!-- Password Input -->
                    <TextBlock Text="Password" FontSize="14" Foreground="#333" Margin="10,10,5,0"/>
                    <Border Background="#F5F5F5" CornerRadius="10" Padding="5">
                        <PasswordBox x:Name="PasswordBox" Height="35" BorderThickness="0" FontSize="14"/>
                    </Border>

                    <!-- Login Button with Corrected Rounded Corners -->
                    <Button x:Name="LoginButton" Content="Login" Height="45"
                            Margin="0,20,0,0" Cursor="Hand"
                            Click="LoginButton_Click"
                            Style="{StaticResource RoundedButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Border>

    </Grid>
</Window>
