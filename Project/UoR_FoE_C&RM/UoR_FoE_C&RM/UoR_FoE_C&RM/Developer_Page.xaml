<Window x:Class="UoR_FoE_C_RM.Developer_PageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Developer Page" Height="350" Width="600" Background="#f1f1f1">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="https://i.ibb.co/gLHqTkH5/blue-white-gradient-linear-1920x1080-c2-1e90ff-ffffff-a-90-f-14.png" Stretch="UniformToFill" />
        </Grid.Background>
        <Grid.RowDefinitions>

            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="User Management System" 
                   FontSize="24" FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0,4,0,36"
                   Foreground="White"/>


        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left" Grid.RowSpan="2" Height="263" Margin="10,58,0,0">

            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBlock Text="User ID: " VerticalAlignment="Center" Margin="5" Foreground="White" FontWeight="Bold"/>
                <TextBox x:Name="txtUserID" Width="150" Margin="5" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Password: " VerticalAlignment="Center" Margin="5" Foreground="White" FontWeight="Bold"/>
                <PasswordBox x:Name="txtPassword" Width="150" Margin="5" />
            </StackPanel>


            <StackPanel Orientation="Horizontal" Margin="10">
                <Button x:Name="btnAddUser" Content="Add User" Width="100" Margin="5" Click="btnAddUser_Click"  Foreground="Black" />
                <Button x:Name="btnRemoveUser"
                        Content="Remove User"
                        Width="100" Margin="5"
                        Click="btnRemoveUser_Click"
                        
                        Foreground="Black" />
            </StackPanel>


            <Button x:Name="btnDisplayUsers"
                    Content="Display Users"
                    Width="150" Margin="10"
                    Click="btnDisplayUsers_Click"
                Foreground="Black"
                    />


            <Button x:Name="btnExit" Content="Exit" 
                    Width="100" Margin="10" 
                    Click="btnExit_Click" 
                    Foreground="Black"
                    FontWeight="Bold"/>
        </StackPanel>


        <ListBox x:Name="lstUsers" Margin="300,42,32,0" Height="282" VerticalAlignment="Top" Grid.RowSpan="2" SelectionChanged="lstUsers_SelectionChanged">

        </ListBox>
    </Grid>
</Window>
