<Window x:Class="UoR_FoE_C_RM.User_Page"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="User Page" Height="500" Width="800" mc:Ignorable="d">
    <Grid Margin="10">
        <Grid.Background>
            <ImageBrush ImageSource="https://i.ibb.co/gLHqTkH5/blue-white-gradient-linear-1920x1080-c2-1e90ff-ffffff-a-90-f-14.png" Stretch="UniformToFill" />
        </Grid.Background>
        <StackPanel Orientation="Vertical">

            <TextBlock Text="User Complaints" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

            <!-- Complaints List -->
            <ListView Name="ComplaintsListView" Height="200" Margin="0,0,0,10">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="ID" DisplayMemberBinding="{Binding ComplaintID}" Width="50"/>
                        <GridViewColumn Header="Category" DisplayMemberBinding="{Binding Category}" Width="100"/>
                        <GridViewColumn Header="Description" DisplayMemberBinding="{Binding Description}" Width="300"/>
                    </GridView>
                </ListView.View>
            </ListView>

            <!-- Complaint Input -->
            <TextBlock Text="Select Category:" Margin="0,10,0,0"/>
            <ComboBox Name="CategoryComboBox" Width="200">
                <ComboBoxItem Content="Hostel"/>
                <ComboBoxItem Content="Academic"/>
                <ComboBoxItem Content="Sport"/>
                <ComboBoxItem Content="Other"/>
            </ComboBox>

            <TextBlock Text="Enter Complaint:" Margin="0,10,0,0"/>
            <TextBox Name="ComplaintTextBox" Height="50" Width="300"/>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button Content="Add Complaint" Width="120" Click="AddComplaint_Click"/>
                <Button Content="Edit Complaint" Width="120" Margin="10,0,0,0" Click="EditComplaint_Click"/>
                <Button Content="Logout" Width="120" Margin="10,0,0,0" Click="Logout_Click"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
