<Window x:Class="UoR_FoE_C_RM.Developer_PageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Developer Page" 
        Height="600" 
        Width="900" 
        Background="#f1f1f1" 
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Style for rounded TextBox -->
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="1"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer Margin="5" x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style for rounded PasswordBox -->
        <Style TargetType="PasswordBox">
            <Setter Property="Padding" Value="1"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer Margin="5" x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style for rounded buttons -->
        <Style TargetType="Button">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="https://i.ibb.co/gLHqTkH5/blue-white-gradient-linear-1920x1080-c2-1e90ff-ffffff-a-90-f-14.png" Stretch="UniformToFill" />
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" 
                   Text="Developer Dashboard" 
                   FontSize="26" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0,10,0,10"
                   Foreground="White"/>

        <!-- Content Section -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- User Input Panel -->
            <Border Grid.Column="0" Padding="20" Margin="10" Background="#FFFFFF" CornerRadius="10">
                <StackPanel>
                    <TextBlock Text="User Details" FontSize="18" FontWeight="Bold" Foreground="Black" Margin="0,0,0,10" TextAlignment="Center"/>

                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="User ID:" Foreground="Black" Margin="0,5,0,2"/>
                        <TextBox x:Name="txtUserID" Width="200" Height="30"/>
                    </StackPanel>

                    <StackPanel Orientation="Vertical" Margin="0,10,0,0">
                        <TextBlock Text="Password:" Foreground="Black" Margin="0,5,0,2"/>
                        <PasswordBox x:Name="txtPassword" Width="200" Height="30"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,50,0,0">
                        <Button x:Name="btnAddUser" Content="Add User" Width="100" Margin="0 0 5 0" Click="btnAddUser_Click"/>
                        <Button x:Name="btnRemoveUser" Content="Remove User" Width="100" Margin="5 0 0 0" Background="#FF4136" Click="btnRemoveUser_Click"/>
                    </StackPanel>

                    <Button x:Name="btnDisplayUsers" Content="Sort Users" Width="220" Margin="0,10,0,0" Click="btnDisplayUsers_Click" Background="#2ECC71"/>

                    <Button x:Name="btnExit" Content="Exit" Width="220" Margin="0,10,0,0" Click="btnExit_Click" Background="#333333"/>
                </StackPanel>
            </Border>

            <!-- User List Panel -->
            <Border Grid.Column="1" Padding="20" Margin="10" Background="#FFFFFF" CornerRadius="10">
                <StackPanel>
                    <!-- Title changed -->
                    <TextBlock Text="User Name and Password" FontSize="18" FontWeight="Bold" Foreground="Black" Margin="0,0,0,10" TextAlignment="Center" Padding="10"/>
                    <!-- DataGrid to display user info -->
                    <DataGrid x:Name="dgUsers" Width="Auto" Height="350" BorderBrush="Gray" BorderThickness="1" AutoGenerateColumns="False" SelectionChanged="dgUsers_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="User Name" Binding="{Binding ID}" Width="*" />
                            <DataGridTextColumn Header="Password" Binding="{Binding Password}" Width="*" />
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
