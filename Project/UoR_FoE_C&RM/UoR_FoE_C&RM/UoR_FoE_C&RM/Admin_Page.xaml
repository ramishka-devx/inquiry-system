<Window x:Class="UoR_FoE_C_RM.Admin_Page"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="UoR-FoE Complaints and Requests Management System - Admin"
        Height="450" Width="1000"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- Drop Shadow Effect -->
        <DropShadowEffect x:Key="ShadowEffect" BlurRadius="8" ShadowDepth="3" Opacity="0.3"/>

        <!-- Button Style -->
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8"
                                Padding="10" Effect="{StaticResource ShadowEffect}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#1E90FF"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="180"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#0078D7"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#005BAA"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Background -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#1E90FF" Offset="0"/>
                <GradientStop Color="#87CEFA" Offset="0.5"/>
                <GradientStop Color="#FFFFFF" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Main Container -->
        <Border Width="950" Height="400" Padding="20" CornerRadius="15" Background="#AAFFFFFF"
                HorizontalAlignment="Center" VerticalAlignment="Center"
                Effect="{StaticResource ShadowEffect}">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Header -->
                    <RowDefinition Height="*"/>
                    <!-- DataGrid -->
                    <RowDefinition Height="Auto"/>
                    <!-- Controls -->
                </Grid.RowDefinitions>

                <!-- Header -->
                <TextBlock Text="Admin Dashboard" FontSize="22" FontWeight="Bold"
                           Foreground="#222" HorizontalAlignment="Center" Margin="0,0,0,15"/>

                <!-- Complaints List (DataGrid) -->
                <DataGrid x:Name="ComplaintsDataGrid" Grid.Row="1" Height="200"
                          AutoGenerateColumns="False"
                          BorderThickness="1" BorderBrush="#CCC" Background="White"
                          Margin="0,0,0,10">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Complaint ID" Binding="{Binding ComplaintID}" Width="Auto"/>
                        <DataGridTextColumn Header="UserName" Binding="{Binding UserName}" Width="Auto"/>
                        <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="Auto"/>
                        <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="Auto"/>
                        <DataGridTextColumn Header="Date" Binding="{Binding Date}" Width="Auto"/>
                        <DataGridTextColumn Header="Priority" Binding="{Binding Priority}" Width="Auto"/>
                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="Auto"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Controls Section -->
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left Section: Change Priority & Status -->
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Change Priority or Status" FontSize="16" FontWeight="Bold" Foreground="#333"/>

                        <!-- Priority Input -->
                        <TextBlock Text="Priority:" FontSize="14" Foreground="#555" Margin="0,10,0,0"/>
                        <Border Background="#F5F5F5" CornerRadius="8" Padding="5">
                            <TextBox x:Name="PriorityTextBox" Height="30" Width="200" BorderThickness="0" FontSize="14"/>
                        </Border>

                        <!-- Status Input -->
                        <TextBlock Text="Status:" FontSize="14" Foreground="#555" Margin="10,10,0,0"/>
                        <Border Background="#F5F5F5" CornerRadius="8" Padding="5">
                            <TextBox x:Name="StatusTextBox" Height="30" Width="200" BorderThickness="0" FontSize="14"/>
                        </Border>

                        <!-- Buttons -->
                        <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                            <Button Content="Change Priority" Click="ChangePriorityButton_Click" Style="{StaticResource RoundedButtonStyle}"/>
                            <Button Content="Change Status" Click="ChangeStatusButton_Click" Style="{StaticResource RoundedButtonStyle}" Margin="10,0,0,0"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Right Section: Sorting -->
                    <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                        <TextBlock Text="Sort Complaints" FontSize="16" FontWeight="Bold" Foreground="#333"/>

                        <Button Content="Sort by Complaint ID" Click="SortComplaintsByID_Click" Style="{StaticResource RoundedButtonStyle}" Margin="0,10,0,0"/>
                        <Button Content="Sort by Priority" Click="SortComplaintsByPriority_Click" Style="{StaticResource RoundedButtonStyle}" Margin="0,10,0,0"/>
                    </StackPanel>
                </Grid>

            </Grid>
        </Border>
    </Grid>
</Window>
