<Window x:Class="UoR_FoE_C_RM.Admin_Page"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UoR_FoE_C_RM"
        mc:Ignorable="d"
        Title="UoR-FoE Complaints and Requests Management System - Admin" Height="450" Width="1000">
    <Grid>
        <!-- Full-screen overlay -->
        <Grid>
            <!-- Use an online image as background -->
            <Grid.Background>
                <ImageBrush ImageSource="https://i.ibb.co/4Rd5Rc7N/image.jpg" Stretch="UniformToFill" />
            </Grid.Background>

            <!-- Full-screen overlay -->
            <Rectangle HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Fill="Black" Opacity="0.6"/>
        </Grid>

        <!-- Complaints List (DataGrid for better organization) -->
        <DataGrid x:Name="ComplaintsDataGrid" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="50,100,50,0" AutoGenerateColumns="True" SelectionChanged="ComplaintsDataGrid_SelectionChanged"/>

        <!-- Welcome Text -->
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,30,0,0">
            <TextBlock Text="Welcome Admin!" FontSize="36" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Options to Change Priority and Status -->
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,320,0,0">
            <TextBlock Text="Change Priority or Status" FontSize="18" FontWeight="Bold" Foreground="White"/>

            <!-- Change Priority -->
            <StackPanel Orientation="Horizontal" Margin="0,10,0,10">
                <TextBlock Text="Priority: " Foreground="White" FontSize="15"/>
                <TextBox x:Name="PriorityTextBox" Width="200" Height="25" Margin="10,0"/>
            </StackPanel>

            <!-- Change Status -->
            <StackPanel Orientation="Horizontal" Margin="0,10,0,10">
                <TextBlock Text="Status: " Foreground="White" FontSize="15"/>
                <TextBox x:Name="StatusTextBox" Width="200" Height="25" Margin="10,0"/>
            </StackPanel>

            <!-- Buttons for Actions -->
            <Button Content="Change Priority" Width="150" Height="35" Margin="0,10" Click="ChangePriorityButton_Click"/>
            <Button Content="Change Status" Width="150" Height="35" Margin="0,10" Click="ChangeStatusButton_Click"/>

            <!-- Sort Complaints -->
            <Button Content="Sort by Complaint ID" Width="150" Height="35" Margin="0,20" Click="SortComplaintsByID_Click"/>
            <Button Content="Sort by Priority" Width="150" Height="35" Margin="0,20" Click="SortComplaintsByPriority_Click"/>
        </StackPanel>
    </Grid>
</Window>
